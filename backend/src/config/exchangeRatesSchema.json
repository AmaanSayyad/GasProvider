{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exchange Rates Configuration",
  "description": "Hardcoded exchange rates for the Treasury demo system",
  "type": "object",
  "required": ["version", "lastUpdated", "tokens", "chains"],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Configuration version number",
      "minimum": 1
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "tokens": {
      "type": "object",
      "description": "Token symbol to USD price mapping",
      "patternProperties": {
        "^[A-Z0-9]+$": {
          "type": "number",
          "minimum": 0,
          "description": "USD price per token"
        }
      },
      "additionalProperties": false
    },
    "chains": {
      "type": "object",
      "description": "Chain ID to native token price mapping",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "required": ["chainId", "name", "nativeSymbol", "usdPrice"],
          "properties": {
            "chainId": {
              "type": "integer",
              "minimum": 1
            },
            "name": {
              "type": "string"
            },
            "nativeSymbol": {
              "type": "string"
            },
            "usdPrice": {
              "type": "number",
              "minimum": 0,
              "description": "USD price per native token"
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
