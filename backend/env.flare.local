# ----------------------------------------------------------------------------
# Fallback Price Sources
# ----------------------------------------------------------------------------

# Enable fallback price sources when FTSO is unavailable
FTSO_ENABLE_FALLBACK=true

# Fallback source type: 'chainlink', 'coingecko', 'none'
FTSO_FALLBACK_SOURCE=chainlink

# CoinGecko API key (if using CoinGecko as fallback)
COINGECKO_API_KEY=

# Chainlink price feed addresses (if using Chainlink as fallback)
# These would be on the respective chains where Chainlink is available
CHAINLINK_FEED_ETH_USD=0x0000000000000000000000000000000000000000
CHAINLINK_FEED_BTC_USD=0x0000000000000000000000000000000000000000

# ----------------------------------------------------------------------------
# Monitoring and Logging
# ----------------------------------------------------------------------------

# Enable detailed FTSO query logging
FTSO_ENABLE_METRICS=true

# Enable FDC attestation logging
FDC_ENABLE_LOGGING=true

# Enable Smart Account operation logging
SMART_ACCOUNT_ENABLE_LOGGING=true

# Enable relayer transaction logging
RELAYER_ENABLE_LOGGING=true

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------

# FTSO price cache TTL in seconds
FTSO_CACHE_TTL=30

# Maximum FTSO query retries
FTSO_MAX_RETRIES=3

# FTSO retry exponential backoff base in milliseconds
FTSO_RETRY_BACKOFF_MS=1000

# FDC attestation timeout in seconds
FDC_ATTESTATION_TIMEOUT=180

# FDC proof retrieval timeout in seconds
FDC_PROOF_TIMEOUT=60

# Smart Account transaction timeout in seconds
SMART_ACCOUNT_TX_TIMEOUT=120

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# Enable FTSO integration
ENABLE_FTSO=true

# Enable FDC attestation verification
ENABLE_FDC=true

# Enable FAssets support
ENABLE_FASSETS=true

# Enable Smart Accounts
ENABLE_SMART_ACCOUNTS=true

# Enable relayer service
ENABLE_RELAYER=true

# ----------------------------------------------------------------------------
# Development and Testing
# ----------------------------------------------------------------------------

# Use Coston2 testnet for development
USE_TESTNET=true

# Skip FDC verification in development (NOT RECOMMENDED FOR PRODUCTION)
SKIP_FDC_VERIFICATION=false

# Mock FTSO responses in development
MOCK_FTSO_RESPONSES=false

# Mock FDC responses in development
MOCK_FDC_RESPONSES=false

